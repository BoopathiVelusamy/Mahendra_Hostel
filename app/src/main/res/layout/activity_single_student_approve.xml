<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    android:id="@+id/wardenlayout"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/img_stu_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_gravity="end"
                        android:src="@mipmap/logo_small" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/basic"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Boopathi V"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_reg_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:padding="2dp"
                            android:text="(0518L02)"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            app:fontFamily="@font/kanit" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_out"
                            android:layout_width="40sp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            app:fontFamily="@font/kanit"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:text="From : "/>

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_fromdate" />

                        <TextView
                            android:id="@+id/tv_from_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="Boopathi V"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:fontFamily="@font/kanit" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@android:color/darker_gray"
                            android:padding="4dp" />

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_fromtime" />

                        <TextView
                            android:id="@+id/tv_from_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="Boopathi V"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:fontFamily="@font/kanit" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_to"
                            android:layout_width="40sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="To :  "
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:fontFamily="@font/kanit" />

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_fromdate" />

                        <TextView
                            android:id="@+id/tv_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="Boopathi V"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:fontFamily="@font/kanit" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@android:color/darker_gray"
                            android:padding="4dp" />

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_fromtime" />

                        <TextView
                            android:id="@+id/tv_endtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="Boopathi V"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:fontFamily="@font/kanit" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/father_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:layout_marginEnd="20sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center|start"
                            android:src="@drawable/ic_baseline_phone_android_24" />

                        <TextView
                            android:id="@+id/tv_father_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="1234567890"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:fontFamily="@font/kanit" />

                        <ImageView
                            android:id="@+id/img_father_call"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_call" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_3p_24" />

                                <TextView
                                    android:id="@+id/tv_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_comment_24" />

                                <TextView
                                    android:id="@+id/tv_reason"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_img"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/et_gradient"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="200sp"
                                    android:layout_height="200sp"
                                    app:cardCornerRadius="10dp">

                                    <ImageView
                                        android:id="@+id/img_req"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_baseline_image_24" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <EditText
                    android:id="@+id/wreason_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="top|start"
                    android:hint="Enter Reason here"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:maxLines="6"
                    android:minLines="4"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/approve_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/rounded_edittext"
                        android:backgroundTint="@color/active_color"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Approve"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reject_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="20sp"
                        android:background="@drawable/rounded_edittext"
                        android:backgroundTint="@color/scarletred"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Reject"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>