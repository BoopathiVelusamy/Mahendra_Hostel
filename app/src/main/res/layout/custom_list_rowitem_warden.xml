<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/basic"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center|start"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Boopathi V"/>

                <TextView
                    android:id="@+id/tv_reg_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:fontFamily="@font/kanit"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center|start"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="(0518L02)"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_out"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:fontFamily="@font/kanit"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="From : "/>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:id="@+id/imageView"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_fromdate"/>

                <TextView
                    android:id="@+id/tv_from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:fontFamily="@font/kanit"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center|start"
                    android:padding="4dp"
                    android:text="Boopathi V"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:background="@android:color/darker_gray"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_fromtime"/>

                    <TextView
                        android:id="@+id/tv_from_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:fontFamily="@font/kanit"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="Boopathi V"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginStart="50dp"
                    android:visibility="gone"
                    android:layout_gravity="center|start"
                    android:gravity="center"
                    android:src="@drawable/ic_baseline_unfold_more_24"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_in"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:fontFamily="@font/kanit"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="To : "/>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_fromdate"/>

                <TextView
                    android:id="@+id/tv_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:fontFamily="@font/kanit"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center|start"
                    android:padding="4dp"
                    android:text="Boopathi V"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:background="@android:color/darker_gray"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_fromtime"/>

                    <TextView
                        android:id="@+id/tv_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:fontFamily="@font/kanit"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="Boopathi V"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/father_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center|start"
                        android:src="@drawable/ic_baseline_phone_android_24"/>

                    <TextView
                        android:id="@+id/tv_father_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:fontFamily="@font/kanit"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="1234567890"/>

                    <ImageView
                        android:id="@+id/img_father_call"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_call"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:background="@android:color/darker_gray"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mother"/>

                    <TextView
                        android:id="@+id/tv_mother_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        app:fontFamily="@font/kanit"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="9876543210"/>

                    <ImageView
                        android:id="@+id/img_mother_call"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_call"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_3p_24"/>

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:fontFamily="@font/kanit"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="Boopathi V"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_comment_24"/>

                    <TextView
                        android:id="@+id/tv_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:fontFamily="@font/kanit"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"
                        android:padding="4dp"
                        android:text="Boopathi V"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="4sp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_approve"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_remove_red_eye_24"/>


            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>