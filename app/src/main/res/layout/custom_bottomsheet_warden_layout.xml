<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    android:id="@+id/wardenlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_stu_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:src="@mipmap/logo_small" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/basic"
                    android:text="Approve/Reject Forms"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_close_black_24dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_margin="2dp"
                                android:fontFamily="@font/basic"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="Boopathi V"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_reg_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="(0518L02)"
                                android:textColor="@color/grey"
                                android:textSize="14sp"
                                app:fontFamily="@font/kanit" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_3p_24" />

                                <TextView
                                    android:id="@+id/tv_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_fromdate" />

                                <TextView
                                    android:id="@+id/tv_from_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10sp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@android:color/darker_gray"
                                    android:padding="4dp" />

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_fromtime" />

                                <TextView
                                    android:id="@+id/tv_from_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_gravity="center|start"
                                android:layout_marginStart="50dp"
                                android:gravity="center"
                                android:src="@drawable/ic_baseline_unfold_more_24"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_fromdate" />

                                <TextView
                                    android:id="@+id/tv_enddate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10sp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@android:color/darker_gray"
                                    android:padding="4dp" />

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_fromtime" />

                                <TextView
                                    android:id="@+id/tv_endtime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center|start"
                                    android:src="@drawable/ic_round_attribution_24" />

                                <TextView
                                    android:id="@+id/tv_father_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="1234567890"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                                <ImageView
                                    android:id="@+id/img_father_call"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_call" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10sp"
                                    android:visibility="gone"
                                    android:layout_marginLeft="10dp"
                                    android:background="@android:color/darker_gray"
                                    android:padding="4dp" />

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:visibility="gone"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_mother" />

                                <TextView
                                    android:id="@+id/tv_mother_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:visibility="gone"
                                    android:text="9876543210"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                                <ImageView
                                    android:id="@+id/img_mother_call"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:visibility="gone"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_call" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_comment_24" />

                                <TextView
                                    android:id="@+id/tv_reason"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Boopathi V"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/kanit" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginEnd="5sp"
                                android:layout_gravity="center|end"
                                android:gravity="center|end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_image_24" />

                                <TextView
                                    android:id="@+id/tv_image_view"
                                    android:layout_width="100dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center|start"
                                    android:padding="4dp"
                                    android:text="View"
                                    android:gravity="center|start"
                                    android:textColor="@color/royalblue"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/kanit" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <EditText
                    android:id="@+id/wreason_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="top|start"
                    android:hint="Enter Reason here"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:maxLines="6"
                    android:minLines="4"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/approve_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/rounded_edittext"
                        android:backgroundTint="@color/active_color"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Approve"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reject_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="20sp"
                        android:background="@drawable/rounded_edittext"
                        android:backgroundTint="@color/scarletred"
                        android:fontFamily="@font/basic"
                        android:gravity="center"
                        android:text="Reject"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>