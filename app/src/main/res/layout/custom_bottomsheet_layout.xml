<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_close_black_24dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/basic"
                android:text="Holiday/Permission Request"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:textSize="14sp"
                android:gravity="top|start"
                android:background="@drawable/et_gradient"
                android:popupBackground="@drawable/et_gradient"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_marginEnd="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bottom_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_date_range_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:background="@android:color/darker_gray"
                            android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/fromtask_date"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginStart="8sp"
                        android:layout_marginEnd="8sp"
                        android:background="@drawable/edittext_bottom_border"
                        android:fontFamily="@font/basic"
                        android:hint="From Date"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingStart="20sp"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_marginEnd="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bottom_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_access_time_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:background="@android:color/darker_gray"
                            android:layout_marginLeft="10dp"/>



                    <EditText
                        android:id="@+id/fromtask_time"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginStart="8sp"
                        android:layout_marginEnd="8sp"
                        android:background="@drawable/edittext_bottom_border"
                        android:fontFamily="@font/basic"
                        android:layout_weight="1"
                        android:hint="From Time"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingStart="20sp"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_fromdate"
                        android:layout_width="50dp"
                        android:layout_height="40sp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/calendaricon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_marginEnd="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bottom_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_date_range_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:background="@android:color/darker_gray"
                            android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/endtask_date"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginStart="8sp"
                        android:layout_marginEnd="8sp"
                        android:background="@drawable/edittext_bottom_border"
                        android:fontFamily="@font/basic"
                        android:hint="End Date"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingStart="20sp"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_marginEnd="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bottom_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_access_time_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:background="@android:color/darker_gray"
                            android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/endtask_time"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginStart="8sp"
                        android:layout_marginEnd="8sp"
                        android:background="@drawable/edittext_bottom_border"
                        android:fontFamily="@font/basic"
                        android:layout_weight="1"
                        android:hint="End Time"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingStart="20sp"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_todate"
                        android:layout_width="50dp"
                        android:layout_height="40sp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/calendaricon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:background="@drawable/dotted_rect"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_choose_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="5dp"
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp"
                        android:background="@drawable/et_gradient"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/basic"
                        android:text="Choose File"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_file_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp"
                        android:paddingLeft="10sp"
                        android:paddingRight="15sp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/kanit"
                        android:text="No File Choosen"
                        android:textColor="@color/appcolor5"
                        android:textSize="15sp" />




                </LinearLayout>

                <EditText
                    android:id="@+id/reason_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Reason here"
                    android:layout_margin="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="16sp"
                    android:lines="6"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:maxLines="6"
                    android:inputType="textMultiLine"
                    android:background="@drawable/rounded_edittext"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="@color/appcolor"
                    android:fontFamily="@font/basic"
                    android:text="Submit"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>